<Window x:Class="Karobar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="298.649" Width="396.622">

    <Grid Background="Lavender">
        <Button x:Name="_login" Content="Login" HorizontalAlignment="Left" Margin="173,196,0,0" VerticalAlignment="Top" Width="147" Height="40" Click="_login_Click"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="39,26,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="_username" HorizontalAlignment="Left" Height="40" Margin="39,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="281" Padding="5,10,5,0"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="39,106,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="_password" HorizontalAlignment="Left" Height="40" Margin="39,137,0,0" VerticalAlignment="Top" Width="281" Padding="5,10,5,0"/>
        <CheckBox x:Name="_remember_me" Content="Remember me" HorizontalAlignment="Left" Margin="39,209,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.434,0.283"/>
    </Grid>
</Window>
